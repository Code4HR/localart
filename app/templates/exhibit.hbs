<div class="pure-g exhibit"><!--Start of Container-->
  <div class="pure-u-1-1 pure-img">
    <img {{bind-attr src="this.fullimage"}} class="pure-img" />
  </div>

  <div class="pure-u-1-1 title">
      <h1>{{this.title}}</h1>
  </div>

  <div class="pure-u-1-1 artists">
      <h2>Artists</h2>
      {{this.artists}}
  </div>

  <div class="pure-u-1-1">
      <h2>Description</h2>
      <p class="description">{{this.description}}</p>
  </div>

</div> <!--End of Container-->
